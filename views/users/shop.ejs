<!-- Add to Cart Script -->
<script>
  $(function() {
    var selectedClass = "";
    $("p").click(function() {
      selectedClass = $(this).attr("data-rel");
      $("#portfolio").fadeTo(50, 0.1);
      $("#portfolio div").not("." + selectedClass).fadeOut();
      setTimeout(function() {
        $("." + selectedClass).fadeIn();
        $("#portfolio").fadeTo(50, 1);
      }, 500);
    });
  });

  function showAddToCartConfirmation(event, productId) {
    event.preventDefault();

    swal({
      title: "Add to Cart",
      text: "Are you sure you want to add this item to your cart?",
      icon: "info",
      buttons: ["Cancel", "Add to Cart"],
      dangerMode: false,
    }).then((addToCart) => {
      if (addToCart) {
        addToCartRequest(productId);
      }
    });
  }

  function addToCartRequest(productId) {
    var addButton = event.target;
    addButton.disabled = true;

    // Create a request payload
    var data = { productId: productId };

    // Send a POST request using Fetch API
    fetch('/addtocart', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(response => {
      console.log('Product added to cart:', response.message);
      var cartCount = parseInt(document.getElementById('cartCount').innerText);
      document.getElementById('cartCount').innerText = cartCount + 1;
      addButton.disabled = false; // Enable the button after successful request
    })
    .catch(error => {
      console.error('Error adding product to cart:', error);
      addButton.disabled = false; // Enable the button in case of an error
    });
  }
</script>
	

	

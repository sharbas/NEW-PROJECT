<div class="coupon-section">
	<div class="container">
	  <div class="row">
		<div class="col-lg-12">
		  <div class="coupon-slider">
			<% coupons.forEach((coupon) => { %>
			<div class="coupon-item">
			  <div class="coupon-content">
				
				<div class="coupon-details">
				  <h3 class="coupon-code"><%= coupon.coupenCode %></h3>
				  <p class="coupon-description"><%= coupon.description %></p>
				  <div class="coupon-image">
					<img src="/public/images/<%= coupon.image %>" alt="Coupon Image" class="coupon-img">
				  </div>
				  <div class="coupon-percentage">
					<span>&#8377;<%= coupon.couponAmount %></span>
				  </div>
				  <p class="coupon-expiry">Expires on: <%= coupon.expiryDate.toLocaleDateString() %></p>
				  <% if(coupon.status === 'Active') { %>
				  <p class="coupon-status active">Status: <span><%= coupon.status %></span></p>
				  <% } else { %>
				  <p class="coupon-status inactive">Status: <span><%= coupon.status %></span></p>
				  <% } %>
				  <a href="/admin/deletecoupon/?id=<%= coupon._id %>" class="delete-link">
					<i class="bi bi-trash-fill"></i>
				  </a>
				</div>
